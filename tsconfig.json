{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@database/*": ["./src/database/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@modules/*": ["./src/modules/*"],
      "@config/*": ["./src/config/*"]
    },
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "src/database/models/index.ts"],
  "exclude": ["node_modules"]
}
